<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/button_ripple"
        android:backgroundTint="@color/red"
        android:paddingHorizontal="16dp"
        android:src="@drawable/icon_close"
        android:tint="?label_primary"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp">

        <TextView
            style="@style/Title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Тема приложения" />

        <RadioGroup
            android:id="@+id/radio_theme"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingStart="30dp"
>

            <RadioButton
                android:id="@+id/theme_light_rb"
                style="@style/RadioButtonLightModeStyle"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:buttonTint="@drawable/color_btn_radio" />

            <RadioButton
                android:id="@+id/theme_dark_rb"
                style="@style/RadioButtonDarkModeStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:buttonTint="@drawable/color_btn_radio" />

            <RadioButton
                android:id="@+id/theme_system_rb"
                style="@style/RadioButtonSysModeStyle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:buttonTint="@drawable/color_btn_radio" />

        </RadioGroup>

    </LinearLayout>


</LinearLayout>