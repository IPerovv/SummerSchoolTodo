<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BasicStyle">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LargeTitle" parent="BasicStyle">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?label_primary</item>
    </style>

    <style name="Title" parent="BasicStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="android:textColor">?label_primary</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Button" parent="BasicStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="background">@drawable/button_ripple</item>
        <item name="android:textColor">@color/label_primary_light</item>
    </style>

    <style name="Body" parent="BasicStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/label_primary_light</item>
    </style>

    <style name="Subhead" parent="BasicStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">?label_secondary</item>
    </style>

    <style name="TODOToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation">8dp</item>
        <item name="android:background">?back_primary</item>
        <item name="titleTextColor">?label_primary</item>
        <item name="subtitleTextColor">?label_secondary</item>
        <item name="colorControlNormal">?label_primary</item>
        <item name="actionMenuTextColor">?label_primary</item>
        <item name="collapsedTitleTextColor">?label_primary</item>
        <item name="collapsedTitleTextAppearance">@style/Title</item>
        <item name="expandedTitleTextColor">?label_primary</item>
        <item name="expandedTitleTextAppearance">@style/LargeTitle</item>
    </style>

        <style name="RadioButtonLightModeStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
            <item name="android:button">@drawable/light_mode</item>
            <item name="android:gravity">center</item>
        </style>

        <style name="RadioButtonDarkModeStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
            <item name="android:button">@drawable/dark_mode</item>
            <item name="android:gravity">center</item>
        </style>

        <style name="RadioButtonSysModeStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
            <item name="android:button">@drawable/like_in_sys_mode</item>
            <item name="android:gravity">center</item>
        </style>

</resources>